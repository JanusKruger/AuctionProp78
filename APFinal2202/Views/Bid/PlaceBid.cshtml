@model APFinal2202.ViewModels.BidViewModel

@{
    ViewBag.Title = "Bid for "+ ViewBag.Subtitle;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("PlaceBid", "Bid", FormMethod.Post, new { propertyId = ViewBag.Id }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Amount, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TimeOf, new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.Label("Time of Bid will be selected when you place your bid", new {@class="text-muted timeOfBid"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsConcluded, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsConcluded)
                    @Html.ValidationMessageFor(model => model.IsConcluded, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-warning">@ViewBag.ErrorMessage</div>
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
